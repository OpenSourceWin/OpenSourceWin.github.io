<%
    var image = '';
    if (item.avatar) {
        image = config.root + item.slug + '/' + item.avatar;
    } else if (item.github_id) {
        image = 'https://avatars.githubusercontent.com/u/' + item.github_id;
    } else if (config.cover) {
        image = config.cover;
    } else {
        image = 'img/default-avatar.png'
    }
%>
<% if (image) { %>
    <img src="<%= image %>" alt="<%- item.title %>" class="rounded <%= className %>">
<% } %>
