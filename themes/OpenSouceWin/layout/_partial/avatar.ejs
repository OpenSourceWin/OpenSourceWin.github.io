<%
    var image = '';
    if (item.avatar) {
        image = config.root + item.slug + '/' + item.avatar;
    } else if (item.github_avatar) {
        image = item.github_avatar;
    } else if (config.cover) {
        image = config.cover;
    } else {
        image = 'img/default-avatar.png'
    }
%>
<% if (image) { %>
    <img src="<%= image %>" loading="lazy" alt="<%- item.name ? item.name : item.slug %>" class="rounded <%= className %>">
<% } %>
